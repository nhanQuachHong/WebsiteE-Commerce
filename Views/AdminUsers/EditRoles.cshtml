@model WebsiteE_Commerce.Models.ViewModels.Admin.EditUserRolesViewModel

<h2>Sửa role</h2>
<p>User: <strong>@Model.Email</strong></p>

<form asp-action="EditRoles" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="UserId" />
    <div asp-validation-summary="ModelOnly"></div>

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div>
            <input type="hidden" asp-for="Roles[i].RoleName" />
            <label>
                <input asp-for="Roles[i].Selected" />
                @Model.Roles[i].RoleName
            </label>
        </div>
    }

    <button type="submit">Lưu</button>
</form>
