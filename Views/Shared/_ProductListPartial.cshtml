@model IEnumerable<WebsiteE_Commerce.Data.HangHoa>

@if (Model != null && Model.Any())
{
    @foreach (var product in Model)
    {
        <!-- Start Product Card -->
        <div class="col-12">
            <a class="product-item" asp-controller="Shop" asp-action="Details" asp-route-id="@product.MaHh">
                <!-- Wrapper cho ảnh -->
                <div class="product-thumbnail-wrapper">
                    <img src="~/images/@(string.IsNullOrEmpty(product.Hinh) ? "product-1.png" : product.Hinh)"
                         class="product-thumbnail"
                         onerror="this.src='/images/product-1.png';"
                         alt="@product.TenHh">
                </div>
                
                <!-- Nội dung sản phẩm -->
                <div class="product-content">
                    <h3 class="product-title">@product.TenHh</h3>
                    <strong class="product-price">@product.DonGia?.ToString("C0", new System.Globalization.CultureInfo("en-US"))</strong>
                </div>

                <!-- Icon cross -->
                <span class="icon-cross">
                    <img src="~/images/cross.svg" alt="View">
                </span>
            </a>
        </div>
        <!-- End Product Card -->
    }
}
else
{
    <div class="col-12 text-center py-5">
        <p class="text-muted fs-5">No products found.</p>
        <a asp-controller="HangHoa" asp-action="Create" class="btn btn-primary mt-3">
            Add new product
        </a>
    </div>
}