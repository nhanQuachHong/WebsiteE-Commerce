@model WebsiteE_Commerce.Data.HangHoa

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <h2 class="text-warning">Chỉnh sửa: @Model.TenHh</h2>
    <hr />
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaHh" />

        <div class="row">
            <div class="col-md-7">
                <div class="form-group mb-3">
                    <label asp-for="TenHh" class="control-label">Tên sản phẩm</label>
                    <input asp-for="TenHh" class="form-control" id="txtTenHh" />
                    <span id="tenFeedback"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DonGia" class="control-label">Giá bán</label>
                    <input asp-for="DonGia" class="form-control" />
                </div>
            </div>

            <div class="col-md-5 text-center">
                <label class="fw-bold">Ảnh hiện tại</label>
                <div class="mb-3">
                    <img src="~/images/@(string.IsNullOrEmpty(Model.Hinh) ? "no-image.png" : Model.Hinh)"
                         id="imgPreview" class="img-thumbnail" style="width:250px;" />
                </div>
                <input type="file" id="fileHinhAjax" class="form-control" />
                <input type="hidden" asp-for="Hinh" id="hinhPath" />
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/thanh_ajax.js"></script>
}