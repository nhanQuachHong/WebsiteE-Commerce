@model WebsiteE_Commerce.Data.HangHoa

@{
    ViewData["Title"] = "Create hang hoa";
}

<div class="container mt-4">
    <h2 class="text-primary">Create</h2>
    <hr />
    <form asp-action="Create" method="post" id="createForm">
        @Html.AntiForgeryToken() <div class="row">
            <div class="col-md-7">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TenHh" class="control-label">Tên sản phẩm</label>
                    <input asp-for="TenHh" id="txtTenHh" class="form-control" placeholder="Nhập tên để kiểm tra Ajax..." />
                    <span id="tenFeedback" class="fw-bold" style="font-size: 0.85rem;"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaLoai" class="control-label">Danh mục</label>
                        <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DonGia" class="control-label">Đơn giá</label>
                        <input asp-for="DonGia" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="control-label">Mô tả ngắn</label>
                    <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="col-md-5 border-start">
                <div class="form-group mb-3 text-center">
                    <label class="control-label fw-bold d-block mb-2">Hình ảnh sản phẩm</label>

                    <div class="mb-3">
                        <img src="/images/no-image.png" id="imgPreview" class="img-thumbnail" style="width: 250px; height: 250px; object-fit: cover;" />
                    </div>

                    <input type="file" id="fileHinhAjax" class="form-control" accept="image/*" />

                    <input type="hidden" asp-for="Hinh" id="hinhPath" />

                    <small class="text-muted mt-2 d-block italic">Ảnh sẽ được tự động upload khi bạn chọn.</small>
                </div>
            </div>
        </div>

        <div class="form-group mt-4 border-top pt-3">
            <button type="submit" id="btnSubmit" class="btn btn-success px-5">Lưu sản phẩm</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/thanh_ajax.js"></script>
}