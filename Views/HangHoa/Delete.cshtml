@model WebsiteE_Commerce.Data.HangHoa

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning text-center">
                        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa sản phẩm này?
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4 text-center">
                            <img src="~/images/@(string.IsNullOrEmpty(Model.Hinh) ? "no-image.png" : Model.Hinh)"
                                 class="img-thumbnail rounded shadow-sm"
                                 style="width: 100%; max-height: 250px; object-fit: contain;"
                                 onerror="this.src='/images/no-image.png'" />
                            <p class="text-muted mt-2 small fst-italic">@Model.Hinh</p>
                        </div>

                        <div class="col-md-8">
                            <h3 class="text-primary">@Model.TenHh</h3>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4">Mã hàng hóa:</dt>
                                <dd class="col-sm-8">#@Model.MaHh</dd>

                                <dt class="col-sm-4">Đơn giá:</dt>
                                <dd class="col-sm-8 fw-bold text-danger">@Model.DonGia?.ToString("#,##0") đ</dd>

                                <dt class="col-sm-4">Danh mục:</dt>
                                <dd class="col-sm-8">@(Model.MaLoaiNavigation?.TenLoai ?? "---")</dd>

                                <dt class="col-sm-4">Nhà cung cấp:</dt>
                                <dd class="col-sm-8">@(Model.MaNccNavigation?.TenCongTy ?? "---")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light d-flex justify-content-end gap-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MaHh" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa ngay
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>