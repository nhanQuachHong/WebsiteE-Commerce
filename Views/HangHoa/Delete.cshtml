@model WebsiteE_Commerce.Data.HangHoa

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-4">
    <div class="alert alert-danger d-flex align-items-center">
        <h2 class="mb-0">⚠️ Bạn có chắc chắn muốn xóa sản phẩm này không?</h2>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 text-center border-end">
            <div class="p-3">
                <h5 class="text-danger">Hình ảnh xác nhận</h5>
                <img src="~/images/@(string.IsNullOrEmpty(Model.Hinh) ? "no-image.png" : Model.Hinh)"
                     class="img-thumbnail mt-2 shadow-sm"
                     style="max-width: 100%; height: auto; filter: grayscale(100%); opacity: 0.8;" />
                <p class="text-muted mt-2 small">Tên file: @Model.Hinh</p>
            </div>
        </div>

        <div class="col-md-8 px-4">
            <h4 class="text-secondary border-bottom pb-2">Thông tin hàng hóa</h4>
            <dl class="row mt-3">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenHh)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TenHh)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DonGia)</dt>
                <dd class="col-sm-8">@Model.DonGia?.ToString("#,##0") đ</dd>

                <dt class="col-sm-4">Danh mục</dt>
                <dd class="col-sm-8">@Model.MaLoaiNavigation?.TenLoai</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MoTa)</dt>
                <dd class="col-sm-8 text-muted">@Html.DisplayFor(model => model.MoTa)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4 border-top pt-3">
                <input type="hidden" asp-for="MaHh" />
                <button type="submit" class="btn btn-danger px-4 me-2">Xác nhận Xóa</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Hủy và quay lại</a>
            </form>
        </div>
    </div>
</div>