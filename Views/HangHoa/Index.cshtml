@model IEnumerable<WebsiteE_Commerce.Data.HangHoa>

@{
    ViewData["Title"] = "Quản lý Hàng Hóa";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-0">📦 QUẢN LÝ SẢN PHẨM</h2>
            <small class="text-muted">Hiện có @(Model?.Count() ?? 0) sản phẩm</small>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="ps-3">Sản phẩm</th>
                            <th>Giá bán</th>
                            <th>Danh mục</th>
                            <th>Nhà cung cấp</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/@item.Hinh"
                                                 class="rounded border"
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 alt="@item.TenHh"
                                                 onerror="this.src='/images/no-image.png'" />
                                            <div class="ms-3">
                                                <h6 class="fw-bold mb-0 text-primary">@item.TenHh</h6>
                                                <small class="text-muted">ID: @item.MaHh</small>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="fw-bold text-danger">
                                        @item.DonGia?.ToString("#,##0") đ
                                    </td>

                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @(item.MaLoaiNavigation?.TenLoai ?? "Chưa phân loại")
                                        </span>
                                    </td>

                                    <td>
                                        <small class="text-secondary fw-bold">
                                            @(item.MaNccNavigation?.TenCongTy ?? "---")
                                        </small>
                                    </td>

                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-sm btn-outline-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-box-open fa-3x mb-3"></i>
                                    <p>Chưa có sản phẩm nào trong kho.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>