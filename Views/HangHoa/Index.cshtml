@model IEnumerable<WebsiteE_Commerce.Data.HangHoa>

@{
    ViewData["Title"] = "Quản lý Hàng Hóa";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">📦 DANH SÁCH SẢN PHẨM</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Thêm mới sản phẩm
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-3" style="width: 10%">Mã HH</th>
                        <th style="width: 15%">Hình ảnh</th>
                        <th style="width: 25%">Tên sản phẩm</th>
                        <th style="width: 15%">Đơn giá</th>
                        <th style="width: 15%">Loại</th>
                        <th class="text-center" style="width: 20%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 text-muted">#@item.MaHh</td>
                                <td>
                                    <img src="~/images/@(string.IsNullOrEmpty(item.Hinh) ? "no-image.png" : item.Hinh)"
                                         class="rounded shadow-sm border"
                                         style="width: 70px; height: 70px; object-fit: cover;"
                                         onerror="this.src='/images/no-image.png';" />
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@item.TenHh</span>
                                    <br />
                                    <small class="text-muted">Alias: @item.TenAlias</small>
                                </td>
                                <td class="text-danger fw-bold">
                                    @item.DonGia?.ToString("#,##0") <span class="small">đ</span>
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @(item.MaLoaiNavigation?.TenLoai ?? "Chưa phân loại")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-sm btn-outline-warning" title="Sửa">Sửa</a>
                                        <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-sm btn-outline-info" title="Chi tiết">Xem</a>
                                        <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-sm btn-outline-danger" title="Xóa">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i>Chưa có sản phẩm nào. Hãy bấm "Thêm mới" để bắt đầu!</i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>