@model WebsiteE_Commerce.Data.HangHoa

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chi tiết sản phẩm</li>
        </ol>
    </nav>

    <div class="card shadow border-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <div class="p-2 border rounded bg-white text-center">
                        <img src="~/images/@(string.IsNullOrEmpty(Model.Hinh) ? "no-image.png" : Model.Hinh)"
                             class="img-fluid"
                             style="max-height: 400px; object-fit: contain;"
                             alt="@Model.TenHh"
                             onerror="this.src='/images/no-image.png'" />
                    </div>
                </div>

                <div class="col-md-7 ps-md-4 mt-3 mt-md-0">
                    <h2 class="fw-bold text-dark">@Model.TenHh</h2>
                    <p class="text-muted">Mã sản phẩm: <span class="fw-bold">#@Model.MaHh</span></p>

                    <div class="mb-3">
                        <span class="h3 text-danger fw-bold me-2">@Model.DonGia?.ToString("#,##0") đ</span>
                        @if (Model.GiamGia > 0)
                        {
                            <span class="badge bg-success align-top">-@Model.GiamGia%</span>
                        }
                    </div>

                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Danh mục:</dt>
                                <dd class="col-sm-8 text-primary fw-bold">@(Model.MaLoaiNavigation?.TenLoai ?? "Chưa phân loại")</dd>

                                <dt class="col-sm-4">Nhà cung cấp:</dt>
                                <dd class="col-sm-8">@(Model.MaNccNavigation?.TenCongTy ?? "Chưa cập nhật")</dd>

                                <dt class="col-sm-4">Ngày nhập:</dt>
                                <dd class="col-sm-8">@Model.NgaySx.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Lượt xem:</dt>
                                <dd class="col-sm-8">@Model.SoLanXem <i class="fas fa-eye text-muted"></i></dd>
                            </dl>
                        </div>
                    </div>

                    <h5 class="fw-bold">Mô tả sản phẩm:</h5>
                    <p class="text-secondary" style="white-space: pre-line;">
                        @(string.IsNullOrEmpty(Model.MoTa) ? "Chưa có mô tả cho sản phẩm này." : Model.MoTa)
                    </p>

                    <div class="mt-5 border-top pt-3">
                        <a asp-action="Edit" asp-route-id="@Model.MaHh" class="btn btn-warning px-4 me-2">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>