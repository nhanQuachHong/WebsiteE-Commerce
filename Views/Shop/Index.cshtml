    }
    
    /* Container ·∫£nh - C·ªë ƒë·ªãnh chi·ªÅu cao */
    .product-thumbnail-wrapper {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
        flex-shrink: 0;
    }
    
    .product-thumbnail {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.5s ease;
    }
    
    .product-item:hover .product-thumbnail {
        transform: scale(1.08);
    }
    
    /* N·ªôi dung s·∫£n ph·∫©m */
    .product-content {
        padding: 20px 15px 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    
    .product-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 10px;
        line-height: 1.4;
        color: #333;
        flex-grow: 1;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .product-price {
        font-size: 18px;
        color: #0d6efd;
        font-weight: 700;
        margin-top: 10px;
        display: block;
    }
    
    /* Icon cross */
    .icon-cross {
        position: absolute;
        bottom: 15px;
        right: 15px;
        background: white;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s ease;
    }
    
    .product-item:hover .icon-cross {
        opacity: 1;
        transform: translateY(0);
    }
    
    .icon-cross img {
        width: 16px;
        height: 16px;
    }
    
    /* Fallback khi kh√¥ng c√≥ ·∫£nh */
    .product-thumbnail-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        z-index: -1;
    }
    
    /* ========== CSS C≈® GI·ªÆ NGUY√äN ========== */
    
    /* CSS cho c√°c √¥ danh m·ª•c */
    .category-tabs {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }
    
    .category-tab {
