    <script>
        // JavaScript ƒë·ªÉ x·ª≠ l√Ω c√°c √¥ danh m·ª•c
        document.addEventListener('DOMContentLoaded', function() {
            // X·ª≠ l√Ω c√°c √¥ danh m·ª•c
            const categoryTabs = document.querySelectorAll('.category-tab');
            const productCards = document.querySelectorAll('.product-card');
            
            categoryTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // X√≥a class active kh·ªèi t·∫•t c·∫£ c√°c tab
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    
                    // Th√™m class active v√†o tab ƒë∆∞·ª£c click
                    this.classList.add('active');
                    
                    // L·∫•y gi√° tr·ªã category t·ª´ data attribute
                    const selectedCategory = this.getAttribute('data-category');
                    
                    // L·ªçc s·∫£n ph·∫©m theo danh m·ª•c
                    filterProductsByCategory(selectedCategory);
                });
            });
            
            function filterProductsByCategory(category) {
                productCards.forEach(card => {
                    const cardCategory = card.getAttribute('data-category');
                    
                    if (category === '' || cardCategory === category) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }
            
            // X·ª≠ l√Ω thanh l·ªçc gi√°
            const priceSlider = document.getElementById('priceSlider');
            const currentPrice = document.getElementById('currentPrice');
            const applyPriceFilter = document.getElementById('applyPriceFilter');
            
            if (priceSlider) {
                // C·∫≠p nh·∫≠t gi√° tr·ªã hi·ªán t·∫°i khi k√©o slider
                priceSlider.addEventListener('input', function() {
                    const price = parseInt(this.value);
                    currentPrice.textContent = formatPrice(price) + ' ƒë';
                });
                
                // X·ª≠ l√Ω khi nh·∫•n n√∫t √°p d·ª•ng
                applyPriceFilter.addEventListener('click', function() {
                    const maxPrice = parseInt(priceSlider.value);
                    filterProductsByPrice(maxPrice);
                });
            }
            
            function filterProductsByPrice(maxPrice) {
                productCards.forEach(card => {
                    const cardPrice = parseFloat(card.getAttribute('data-price')) || 0;
                    
                    if (cardPrice <= maxPrice) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }
            
            function formatPrice(price) {
                return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            // X·ª≠ l√Ω s·∫Øp x·∫øp (gi·ªØ nguy√™n ch·ª©c nƒÉng c≈©)
            const priceSort = document.getElementById('priceSort');
            if (priceSort) {
                priceSort.addEventListener('change', function() {
                    sortProducts(this.value);
                });
            }
            
            function sortProducts(sortType) {
                const container = document.getElementById('productList');
                const products = Array.from(container.querySelectorAll('.product-card'));
                
                products.sort((a, b) => {
                    const priceA = parseFloat(a.getAttribute('data-price')) || 0;
                    const priceB = parseFloat(b.getAttribute('data-price')) || 0;
                    
                    switch(sortType) {
                        case 'asc':
                            return priceA - priceB;
                        case 'desc':
                            return priceB - priceA;
                        case 'newest':
                            // N·∫øu c√≥ data attribute cho ng√†y t·∫°o th√¨ s·∫Øp x·∫øp theo ƒë√≥
                            // ·ªû ƒë√¢y t·∫°m th·ªùi gi·ªØ nguy√™n th·ª© t·ª±
                            return 0;
                        default:
                            return 0;
                    }
                });
                
                // X√≥a t·∫•t c·∫£ s·∫£n ph·∫©m hi·ªán t·∫°i
                products.forEach(product => container.removeChild(product));
                
                // Th√™m l·∫°i s·∫£n ph·∫©m ƒë√£ s·∫Øp x·∫øp
                products.forEach(product => container.appendChild(product));
            }
        });
    </script>
