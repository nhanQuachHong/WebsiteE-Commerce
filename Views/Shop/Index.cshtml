    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tiny-slider.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/search.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Bi·∫øn ƒë·ªÉ l∆∞u tr·∫°ng th√°i hi·ªán t·∫°i
            let currentCategory = '';
            let currentSort = '';
            
            // X·ª≠ l√Ω c√°c √¥ danh m·ª•c - AJAX
            const categoryTabs = document.querySelectorAll('.category-tab');
            const priceSort = document.getElementById('priceSort');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const productList = document.getElementById('productList');
            
            // C·∫≠p nh·∫≠t URL m√† kh√¥ng reload (ch·ªâ ƒë·ªÉ hi·ªÉn th·ªã)
            function updateUrlParams() {
                const params = new URLSearchParams();
                if (currentCategory) params.set('category', currentCategory);
                if (currentSort) params.set('sort', currentSort);
                const newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
                window.history.pushState({}, '', newUrl);
            }
            
            // Load s·∫£n ph·∫©m b·∫±ng AJAX
            function loadProducts() {
                productList.classList.add('loading');
                loadingSpinner.style.display = 'block';
                
                const params = new URLSearchParams();
                if (currentCategory) params.append('category', currentCategory);
                if (currentSort) params.append('sort', currentSort);
                
                fetch(`/Shop/GetProducts?${params.toString()}`)
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.text();
                    })
                    .then(html => {
                        productList.innerHTML = html;
                        productList.classList.remove('loading');
                        loadingSpinner.style.display = 'none';
                    })
                    .catch(error => {
                        console.error('Error loading products:', error);
                        productList.innerHTML = '<div class="col-12 text-center py-5"><p class="text-muted fs-5">C√≥ l·ªói x·∫£y ra khi t·∫£i s·∫£n ph·∫©m.</p></div>';
                        productList.classList.remove('loading');
                        loadingSpinner.style.display = 'none';
                    });
            }
            
            // X·ª≠ l√Ω click v√†o danh m·ª•c
            categoryTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // X√≥a active kh·ªèi t·∫•t c·∫£ c√°c tab
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    
                    // Th√™m active v√†o tab ƒë∆∞·ª£c click
                    this.classList.add('active');
                    
                    // L·∫•y gi√° tr·ªã category
                    currentCategory = this.getAttribute('data-category');
                    
                    // C·∫≠p nh·∫≠t URL
                    updateUrlParams();
                    
                    // Load s·∫£n ph·∫©m
                    loadProducts();
                });
            });
            
            // X·ª≠ l√Ω s·∫Øp x·∫øp
            if (priceSort) {
                priceSort.addEventListener('change', function() {
                    currentSort = this.value;
                    updateUrlParams();
                    loadProducts();
                });
            }
            
            // Ki·ªÉm tra n·∫øu c√≥ tham s·ªë category t·ª´ URL (khi t·ª´ trang home chuy·ªÉn sang)
            const urlParams = new URLSearchParams(window.location.search);
            const categoryFromUrl = urlParams.get('category');
            const sortFromUrl = urlParams.get('sort');
            
            if (categoryFromUrl) {
                // T√¨m v√† k√≠ch ho·∫°t tab t∆∞∆°ng ·ª©ng
                const targetTab = document.querySelector(`.category-tab[data-category="${categoryFromUrl}"]`);
                if (targetTab) {
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    targetTab.classList.add('active');
                    currentCategory = categoryFromUrl;
                }
            }
            
            if (sortFromUrl && priceSort) {
                priceSort.value = sortFromUrl;
                currentSort = sortFromUrl;
            }
            
            // X·ª≠ l√Ω khi nh·∫•n n√∫t back/forward
            window.addEventListener('popstate', function() {
                const urlParams = new URLSearchParams(window.location.search);
                const category = urlParams.get('category') || '';
                const sort = urlParams.get('sort') || '';
                
                // C·∫≠p nh·∫≠t giao di·ªán
                categoryTabs.forEach(tab => {
                    const tabCategory = tab.getAttribute('data-category');
                    if (tabCategory === category) {
                        tab.classList.add('active');
                    } else {
                        tab.classList.remove('active');
                    }
                });
                
                if (priceSort && sort) {
                    priceSort.value = sort;
                }
                
                // Load s·∫£n ph·∫©m
                currentCategory = category;
                currentSort = sort;
                loadProducts();
            });
        });
    </script>
</body>
